{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "allowJs": true,
    "lib": [
      "es5", "es6", "dom", "es2017"
    ],
    "paths": {
      "*": ["node_modules/*"]
    },
    "downlevelIteration": true
  },
  "include": ["src/**/*"]
}