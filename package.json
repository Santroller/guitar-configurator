{
  "name": "guitar-configurator",
  "version": "0.0.2-1",
  "description": "An application for configuring custom guitar hero guitars",
  "main": "./dist/main.js",
  "scripts": {
    "build": "rimraf dist && tsc && npm run html",
    "watch": "tsc -w",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "start": "npm run build && electron ./dist/main.js",
    "pack": "electron-builder --dir",
    "dist": "npm run build && build --publish onTagOrDraft",
    "html": "copyfiles -u 1 assets/* dist && copyfiles index.html dist",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.tangentmc.guitar-configurator",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": [
        "msi",
        "portable"
      ]
    },
    "files": [
      "dist"
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "snap",
        "tar.gz"
      ],
      "synopsis": "An application for configuring custom guitar hero guitars",
      "category": "Settings",
      "maintainer": "sanjay900 <sanjay.govind9@gmail.com>"
    },
    "directories": {
      "output": "release"
    }
  },
  "repository": "https://github.com/sanjay900/guitar-configurator",
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo",
    "typescript"
  ],
  "author": {
    "name": "Sanjay Govind",
    "email": "sanjay.govind9@gmail.com",
    "url": "https://tangentmc.net"
  },
  "license": "CC0-1.0",
  "devDependencies": {
    "copyfiles": "^2.1.0",
    "electron": "^4.0.8",
    "electron-builder": "^20.39.0",
    "electron-rebuild": "^1.8.4",
    "rimraf": "^2.6.3",
    "tslint": "^5.10.0",
    "typescript": "^2.8.3"
  },
  "dependencies": {
    "@types/bootstrap": "^4.3.0",
    "@types/delay": "^3.1.0",
    "@types/jenkins": "^0.23.1",
    "@types/node-hid": "^0.7.0",
    "@types/request-promise-native": "^1.0.15",
    "@types/serialport": "^7.0.2",
    "@types/usb": "^1.5.1",
    "bootstrap": "^4.3.1",
    "chip.avr.avr109": "^1.1.1",
    "delay": "^4.1.0",
    "jenkins": "^0.23.0",
    "jquery": "^3.3.1",
    "node-hid": "^0.7.7",
    "popper.js": "^1.14.7",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.7",
    "serialport": "^7.1.4",
    "usb": "^1.5.0"
  }
}
